<html>
  <head>
    <meta charset="utf-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../estilo/estilo.css" />
    <link rel="stylesheet" href="../estilo/estilo-registro.css" />
  </head>
  <body
    style="height: 100vh; display: flex; flex-flow: column; overflow: hidden"
  >
    <%- include('../partials/header.ejs') %> <%- include('../views/navAdmin.ejs') %>
    <div class="row">
      <div class="col-md-4">
        <form id="myForm" action="agregar-categoria" method="post">
          <div>
            <label class="form-label">Nombre</label>
            <input
              id="form-nombre"
              class="form-control"
              type="text"
              name="nombre"
            />
          </div>
          <button id="but-agregar" type="submit" class="btn btn-primary mt-2">
            Grabar
          </button>
        </form>
      </div>

      <div class="col-md-8">
        <table class="table">
          <thead>
            <tr>
              <th>Nombre</th>
            </tr>
          </thead>
          <tbody id="datos">
            <%- body %>
          </tbody>
        </table>
      </div>
    </div>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
